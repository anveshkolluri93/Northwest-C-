@model DataAnveshkumarKolluri.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ActorName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ActorName" class="form-control" />
                <span asp-validation-for="ActorName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ActressName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ActressName" class="form-control" />
                <span asp-validation-for="ActressName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MovieGenre" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MovieGenre" class="form-control" />
                <span asp-validation-for="MovieGenre" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MovieReviews" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MovieReviews" class="form-control" />
                <span asp-validation-for="MovieReviews" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MovieTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MovieTitle" class="form-control" />
                <span asp-validation-for="MovieTitle" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
