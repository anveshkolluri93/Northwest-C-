    <script>
        function validate() {
            var username = document.getElementById("username").value;
            var password = document.getElementById("password").value;
            if (myform.username.value.length == 0) {
                document.getElementById("usernameError").innerHTML = "You must enter a username";

                return false;
            }
            if (myform.password.value.length == 0) {
                document.getElementById("passwordError").innerHTML = "You must enter a password";
                return false;
            }
            if (username == "s525272" && password == "s525272") {
                window.location="LoginIndex"

                /*opens the target page while Id & password matches*/
            } else {
                if (username == "admin" && password == "admin") {
