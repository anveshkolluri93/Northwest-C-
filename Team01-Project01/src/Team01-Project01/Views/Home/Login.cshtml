                                <!-- Button -->

                                <div class="col-sm-12 controls form-group">
                                    <input type="button" class="btn btn-success" value="Login" id="submit" onclick="validate();" />
                                    <a asp-controller="Faculties" asp-action="Index">..</a>


                                </div>
                            </div>
