<div class="container">
    .

    <div class="row vertical-offset-100">

        <div class="col-md-5 col-md-offset-4" style="float: right">


            <div class="panel panel-default">


                <div class="panel-heading">
                    <div class="panel-title"><b>Sign In</b></div>
                    <div style="float:right; font-size: 80%; position: relative; color:white; top:-10px"><a href="#"><b>Forgot password?</b></a></div>
                </div>

                <div class="panel-body">
                    <form class="login">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                        </div>                          <br />
                        <div class="input-group">
                            <div class="checkbox">
                                <label>
                                    <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                </label>
                            </div>
                        </div>

                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                <a id="btn-login" asp-controller="Schedules" asp-action="Create" class="btn btn-success">Login  </a>

                            </div>
                        </div>
                        <!-- <input type="button" id="signin" name="submit" value="Sign In" class="btn btn-success btn-sm" onclick="verifyLogin()"/>-->

                        <div>
                            <p id="error" style="color: red"></p>
                        </div>
                    </form>
                </div>
                <div>


                </div>

            </div>
        </div>
    </div>
</div>


